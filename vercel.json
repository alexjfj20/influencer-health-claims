{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/frontend/dist"
      }
    },
    {
      "src": "src/backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/dist/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/dist/index.html"
    }
  ]
}
